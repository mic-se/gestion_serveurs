{% extends "base.html.twig" %}
{% block body %}

{% if error %}
   <div class="ui error message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="ui placeholder segment">
    <div class="ui one column very relaxed stackable grid">
        <div class="column">
            <form class="ui form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="field">
                    <label for="username">Nom d'utilisateur</label>
                    <div class="ui left icon input">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                        <i class="user icon"></i>
                    </div>
                </div>

                <div class="field">
                    <label for="password">Mot de passe</label>
                    <div class="ui left icon input">
                        <input type="password" id="password" name="_password" required="required" />
                        <i class="lock icon"></i>
                    </div>
                </div>

                <button class="ui blue submit button" style="width:100%;" type="submit" id="_submit" name="_submit">Connexion</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
